{
  "categories": [
    {
      "title": "## 🚀 Features",
      "labels": ["feature", "enhancement"]
    },
    {
      "title": "## 🐛 Bug Fixes",
      "labels": ["bug", "fix"]
    },
    {
      "title": "## 📚 Documentation",
      "labels": ["documentation", "docs"]
    },
    {
      "title": "## 🔧 Maintenance",
      "labels": ["chore", "maintenance", "dependencies"]
    },
    {
      "title": "## ⚡ Performance",
      "labels": ["performance"]
    },
    {
      "title": "## 🔒 Security",
      "labels": ["security"]
    }
  ],
  "template": "${{CHANGELOG}}",
  "pr_template": "- ${{TITLE}} @${{AUTHOR}} (#${{NUMBER}})",
  "empty_template": "No changes",
  "label_extractor": [
    {
      "pattern": "^feat",
      "label": "feature"
    },
    {
      "pattern": "^fix",
      "label": "bug"
    },
    {
      "pattern": "^docs",
      "label": "documentation"
    },
    {
      "pattern": "^chore",
      "label": "chore"
    },
    {
      "pattern": "^perf",
      "label": "performance"
    }
  ],
  "duplicate_filter": true,
  "transformers": [
    {
      "pattern": "\\[.*\\]",
      "target": ""
    }
  ],
  "max_tags_to_fetch": 200,
  "max_pull_requests": 200,
  "max_back_track_time_days": 365,
  "exclude_merge_branches": ["main", "master", "develop"],
  "tag_resolver": {
    "method": "semver",
    "filter": {
      "pattern": "v.*",
      "flags": "gu"
    }
  },
  "base_branches": ["main"],
  "sort": {
    "order": "DESC",
    "on_property": "mergedAt"
  }
}