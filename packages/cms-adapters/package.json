  "author": "SightEdit Team",
  "license": "MIT",
  "peerDependencies": {
    "@sightedit/core": "^2.0.0-alpha.1"
  },
  "dependencies": {
    "contentful": "^10.6.0",
    "contentful-management": "^11.8.0",
    "@sanity/client": "^6.10.0",
    "@strapi/sdk-js": "^1.0.0-beta.0",
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "tsup": "^8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sightedit/sightedit.git",
    "directory": "packages/cms-adapters"
  }
