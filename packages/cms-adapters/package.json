{
  "name": "@sightedit/cms-adapters",
  "version": "2.0.0-alpha.1",
  "description": "Headless CMS adapters for SightEdit - Contentful, Strapi, Sanity, WordPress and more",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "sightedit",
    "cms",
    "headless-cms",
    "contentful",
    "strapi",
    "sanity",
    "wordpress",
    "adapters"
