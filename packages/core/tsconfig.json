{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "strictFunctionTypes": false,
    "noImplicitReturns": false,
    "noImplicitThis": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": ["src/**/*"],
  "exclude": [
    "**/*.test.ts", 
    "**/*.spec.ts", 
    "**/*.documented.ts",
    "dist", 
    "node_modules",
    "../plugin-*/**/*",
    "src/utils/opentelemetry.ts",
    "src/utils/sentry-integration.ts",
    "src/utils/sentry-integration-stub.ts", 
    "src/utils/telemetry.ts",
    "src/utils/telemetry-stub.ts",
    "src/utils/monitoring-dashboard.ts",
    "src/utils/monitoring-dashboard-stub.ts",
    "src/utils/analytics.ts",
    "src/utils/error-recovery.ts",
    "src/utils/health-checker.ts",
    "src/utils/error-handler.ts",
    "src/utils/logger.ts",
    "src/utils/performance.ts",
    "src/utils/bundle-optimizer.ts",
    "src/utils/business-metrics.ts",
    "src/utils/dom-optimizer.ts",
    "src/utils/notification-system.ts",
    "src/utils/validation-engine.ts",
    "src/utils/api-optimizer.ts",
    "src/utils/safe-json.ts",
    "src/utils/sanitizer.ts",
    "src/utils/accessibility.ts",
    "src/cache/**/*",
    "src/security/**/*",
    "src/collaboration/**/*",
    "src/schema/**/*",
    "src/services/**/*",
    "src/repositories/**/*",
    "src/commands/**/*",
    "src/container.ts",
    "src/core/**/*",
    "src/batch-manager.ts",
    "src/parser.ts",
    "src/index.basic.ts",
    "src/index.documented.ts",
    "src/editors/advanced-bundle.ts",
    "src/editors/base.documented.ts",
    "src/editors/collection.ts",
    "src/editors/color.ts",
    "src/editors/date.ts",
    "src/editors/file.ts",
    "src/editors/html-designer.ts",
    "src/editors/json.ts",
    "src/editors/link.ts",
    "src/editors/number.ts",
    "src/editors/product-selector.ts",
    "src/editors/richtext.ts",
    "src/editors/select.ts",
    "src/ui/collaboration-ui.ts",
    "src/ui/edit-mode.ts"
  ]
}