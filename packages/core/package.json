{
  "name": "@sightedit/core",
  "type": "module",
  "version": "1.0.0",
  "description": "Core library for SightEdit visual editing system",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run build:types && npm run build:esm && npm run build:umd",
    "build:types": "tsc --emitDeclarationOnly --declaration --declarationMap",
    "build:esm": "esbuild src/index.ts --bundle --outfile=dist/index.esm.js --platform=browser --format=esm --external:quill --external:dompurify",
    "build:umd": "esbuild src/index.ts --bundle --outfile=dist/index.js --platform=browser --format=iife --global-name=SightEdit --external:quill --external:dompurify",
    "dev": "esbuild src/index.ts --bundle --outfile=dist/index.esm.js --platform=browser --format=esm --external:quill --external:dompurify --watch",
    "test": "jest",
    "lint": "eslint src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit --skipLibCheck"
  },
  "keywords": [
    "visual-editor",
    "cms",
    "content-management",
    "wysiwyg",
    "inline-editing"
  ],
  "author": "SightEdit Contributors",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.8",
    "@rollup/plugin-node-resolve": "^15.3.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/dompurify": "^3.0.5",
    "@types/jest": "^29.5.14",
    "better-docs": "^2.7.3",
    "bundlesize": "^0.18.1",
    "docdash": "^2.0.2",
    "esbuild": "^0.21.5",
    "glob": "^10.3.10",
    "gzip-size": "^7.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdoc": "^4.0.2",
    "jsdoc-plugin-typescript": "^2.2.1",
    "rollup": "^4.47.1",
    "ts-jest": "^29.4.1",
    "tslib": "^2.8.1",
    "typedoc": "^0.25.7",
    "typescript": "^5.9.2"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@types/quill": "^2.0.14",
    "dompurify": "^3.2.6",
    "quill": "^2.0.3"
  }
}
