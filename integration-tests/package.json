{
  "name": "@sightedit/integration-tests",
  "version": "1.0.0",
  "description": "Integration tests for SightEdit system",
  "private": true,
  "type": "module",
  "scripts": {
    "test": "jest --config jest.config.integration.js",
    "test:watch": "jest --config jest.config.integration.js --watch",
    "test:coverage": "jest --config jest.config.integration.js --coverage",
    "test:api": "jest --config jest.config.integration.js --testPathPattern=api",
    "test:db": "jest --config jest.config.integration.js --testPathPattern=database",
    "test:auth": "jest --config jest.config.integration.js --testPathPattern=auth",
    "test:collaboration": "jest --config jest.config.integration.js --testPathPattern=collaboration",
    "test:security": "jest --config jest.config.integration.js --testPathPattern=security",
    "test:performance": "jest --config jest.config.integration.js --testPathPattern=performance",
    "test:all": "npm run test:api && npm run test:db && npm run test:auth && npm run test:collaboration && npm run test:security",
    "setup:env": "node src/setup/environment.js",
    "clean": "rm -rf coverage node_modules",
    "docker:up": "docker-compose -f docker/docker-compose.test.yml up -d",
    "docker:down": "docker-compose -f docker/docker-compose.test.yml down -v",
    "docker:logs": "docker-compose -f docker/docker-compose.test.yml logs -f"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.0",
    "@types/supertest": "^6.0.2",
    "@types/ws": "^8.5.10",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@faker-js/faker": "^8.3.1",
    "axios": "^1.6.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.3.0",
    "mongoose": "^8.0.3",
    "mysql2": "^3.6.5",
    "pg": "^8.11.3",
    "redis": "^4.6.11",
    "sqlite3": "^5.1.6",
    "supertest": "^6.3.3",
    "ws": "^8.14.2",
    "puppeteer": "^21.6.1",
    "artillery": "^2.0.5"
  }
}